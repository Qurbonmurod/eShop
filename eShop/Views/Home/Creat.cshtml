@model TV
@{
    ViewBag.Title = "Creat TV";
}
<form asp-controller="home" asp-action="creat" method="post" class=" mt-3">
    <div class=" form-group row">
        <label asp-for="Name" class=" col-sm-2 col-form-label ">Name</label>
        <div class=" col-sm-10 "><input asp-for="Name" placeholder="Name" /></div>
    </div>
